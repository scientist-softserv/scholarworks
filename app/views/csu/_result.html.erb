<div class="csu-document-type">
  <% if document.collection? %>
    Collection
  <% else %>
    <%= document.resource_type.first if document.resource_type.presence %>
  <% end %>
</div>
<div class="csu-document-title">
  <% if document.collection? %>
    <%= link_to document.title_or_label, [hyrax, document] %>
  <% else %>
    <%= link_to document.title_or_label, [main_app, document] %>
  <% end %>
</div>
<div class="csu-document-creator">
  <%= document.creator_name.first if document.creator_name.presence %>
</div>
<div class="csu-document-description">
  <% if document.description.presence %>
    <%= document.description.first[0..250].html_safe %>
    <%= '. . .' if document.description.first.length > 250 %>
  <% end %>
</div>
<%#= document.methods %>
